@model IEnumerable<WebSales.Models.Players>

@{
    ViewData["Title"] = "Players";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">New Player</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ranking)
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ranking)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="NewTournament" asp-route-id="@item.Id">New Tournament</a>
                </td>
            </tr>
        }
    </tbody>
</table>
