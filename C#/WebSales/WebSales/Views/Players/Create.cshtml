@model WebSales.Models.Players
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>New Player</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" classe="control-label"></label>
                <input asp-for="Name" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Age" classe="control-label"></label>
                <input asp-for="Age" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Ranking" classe="control-label"></label>
                <input asp-for="Ranking" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Decks" classe="control-label"></label>
                <input asp-for="Decks" class="form-control"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class=" btn btn-default" />
            </div>
        </form>
    </div>
</div>
